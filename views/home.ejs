<%- include("partials/header"); -%>

<div class="container">
  <h1>Home</h1>

  <p><%= startingContent %></p>

  <% posts.forEach(post => { %>
  <h1><%= post.title %></h1>
  <p>
    <%= post.content.slice(0, 100) + " ..." %>
    <a href="/posts/<%=post._id%>">Read more</a>
  </p>
  <% }); %>
</div>

<%- include("partials/footer"); -%>
